<div class="detail">
  <div class="detail_header" id="<%=h node.id %>">
    <span class="signature"><%=h node.signature %></span>
    <div class="detail_header_links">
      <span class="detail_type">(<%= pretty_type(node) %>)</span>
      <a href="#<%=h node.id%>" class="detail_link" title="Link to this <%= pretty_type(node) %>">#</a>
      <%= to_top_link() %>
    </div>
  </div>
  <%= if specs = get_specs(node) do %>
    <p>Specs:</p>
    <ul class="spec">
      <%= for spec <- specs do %>
        <li><%= spec %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="docstring"><%= to_html(node.doc) %></div>
  <%= if node.source do %>
    <a href="<%= node.source %>" class="view_source">Source</a>
  <% end %>
</div>
