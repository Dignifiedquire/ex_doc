<!DOCTYPE html>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <title><%= config.project %> v<%= config.version %> Documentation</title>

  <link rel="stylesheet" href="css/style.css" type="text/css" media="screen" charset="utf-8" />

  <script src="js/jquery-1.11.1.min.js"></script>
  <script src="js/highlight.js"></script>
  <script src="js/bootstrap.js"></script>

  <script src="js/app.js"></script>

</head>
<body>
  <div id="header">
    <div class="wrapper">
      <div class="logo">
        <img src="img/logo.png" alt="Logo">
      </div>
      <div class="title">
        <h1>
          <%= if url = config.homepage_url || config.source_url do %>
          <a href="<%= url %>" target="_top"><%= config.project %></a>
          <% else %>
          <%= config.project %>
          <% end %>
        </h1>
        <h2>v <%= config.version %></h2>
      </div>
    </div>
  </div>

  <div class="container">
    <div id="navigation">
      <ul class="switcher">
        <li class="active">
          <a href="#modules-list"
             data-toggle="tab">Modules</a>
        </li>
        <li>
          <a href="#exceptions-list"
             data-toggle="tab">Exceptions</a>
        </li>
        <li>
          <a href="#protocols-list"
             data-toggle="tab">Protocols</a>
        </li>
      </ul>
      <div class="search"><input type="text" placeholder="search"/></div>
      <%= list_template(:modules, nodes.modules, config, module) %>
      <%= list_template(:protocols, nodes.protocols, config, module) %>
      <%= list_template(:exceptions, nodes.exceptions, config, module) %>
    </div>

    <div id="content">
      <%= content %>
    </div>
  </div>
</body>
</html>
